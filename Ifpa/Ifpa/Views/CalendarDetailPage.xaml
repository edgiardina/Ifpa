<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ifpa.Views.CalendarDetailPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatibile with Xamarin Live Player -->
            <Color x:Key="Primary">#2F4E6E</Color>
            <Color x:Key="Accent">#072C53</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Padding="15">
            <Label Text="{Binding Website, Mode=OneWay}" />
            <Label Text="{Binding DirectorName, Mode=OneWay}" />
            <Label Text="{Binding Address1, Mode=OneWay}"   />
            <Label Text="{Binding Address2, Mode=OneWay}"   />
            <Label Text="{Binding City, Mode=OneWay}"    />
            <Label Text="{Binding State, Mode=OneWay}"    />
            <Label Text="{Binding CountryName, Mode=OneWay}"    />
            <Editor Text="{Binding Details, Mode=OneWay}" IsEnabled="False" HeightRequest="600"  />
        </StackLayout>
    </ScrollView>
</ContentPage>