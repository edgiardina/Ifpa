<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ifpa.Views.PlayerDetailPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatibile with Xamarin Live Player -->
            <Color x:Key="Primary">#2F4E6E</Color>
            <Color x:Key="Accent">#072C53</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" x:Name="RefreshButton" Clicked="Refresh_Clicked" Icon="refresh.png" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        <Image Source="{Binding PlayerAvatar, Mode=OneWay}" HeightRequest="165" />
        <Image Source="refresh.png" x:Name="RefreshIndicator" IsVisible="False" />
        <Label Text="{Binding Name, Mode=OneWay}" FontSize="16"/>
        <Label LineBreakMode="NoWrap" Style="{DynamicResource ListItemTextStyle}" FontSize="16">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Rank: " />
                        <Span Text="{Binding Rank, Mode=OneWay}" />
                        <Span Text=" " />
                        <Span Text="{Binding TotalWpprs, Mode=OneWay}" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button Margin="0,10,0,0" Text="Tournament Results" Clicked="TournamentResults_Button_Clicked" BackgroundColor="{StaticResource Primary}" TextColor="White" />
        <Button Margin="0,10,0,0" Text="Player vs Player" Clicked="Pvp_Button_Clicked" BackgroundColor="{StaticResource Primary}" TextColor="White" />
    </StackLayout>
</ContentPage>