<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Ifpa.Views"
            x:Class="Ifpa.Views.MainPage"
    <TabbedPage.Children>
        <NavigationPage Title="Top 50" Icon="numbered_list.png">      
            <x:Arguments>
                <views:PlayersPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Player Search" Icon="search.png">
            <x:Arguments>
                <views:PlayerSearchPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="My Stats" Icon="mystats.png">            
            <x:Arguments>
                <views:PlayerDetailPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Calendar" Icon="calendar.png">          
            <x:Arguments>
                <views:CalendarPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="About" Icon="tab_about.png">     
            <x:Arguments>
                <views:AboutPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>