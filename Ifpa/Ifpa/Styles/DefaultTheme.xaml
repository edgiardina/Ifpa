<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ifpa.Styles.DefaultTheme">

    <!--<ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Global.xaml" />
        <ResourceDictionary Source="/Styles/Sizes.xaml" />
        <ResourceDictionary Source="/Styles/Text.xaml" />
        <ResourceDictionary Source="/Styles/Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>-->

    <!-- Avoid declaring these styles twice by moving them into a default theme shared by both light and dark themes -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource NavigationPrimary}" />
        <Setter Property="BarTextColor" Value="{DynamicResource BarTextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
    </Style>

    <Style TargetType="Button" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{DynamicResource ButtonBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource ButtonTextColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
    </Style>
</ResourceDictionary>